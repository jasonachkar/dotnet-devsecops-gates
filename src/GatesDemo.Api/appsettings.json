{
  // ==========================================================================
  // Redirect Endpoint Configuration
  // ==========================================================================
  // Controls which hosts the /api/redirect endpoint will accept.
  // Only HTTPS URLs with hosts listed here will result in a 302 redirect.
  // Any other host returns 400 Bad Request (defense against open redirect).
  "RedirectOptions": {
    "AllowedHosts": [ "example.com", "learn.microsoft.com" ]
  },

  // ==========================================================================
  // CORS (Cross-Origin Resource Sharing) Configuration
  // ==========================================================================
  // Only these origins can make cross-origin requests to the API.
  // This is NOT a wildcard (*) policy — only explicitly listed origins.
  "CorsOptions": {
    "AllowedOrigins": [ "https://example.com" ]
  },

  // ==========================================================================
  // Rate Limiting Configuration
  // ==========================================================================
  // Fixed-window rate limiter settings.
  // PermitLimit: max requests per window (10)
  // WindowSeconds: window duration in seconds (60 = 1 minute)
  // QueueLimit: 0 = reject immediately when limit reached (no queuing)
  "RateLimitOptions": {
    "PermitLimit": 10,
    "WindowSeconds": 60,
    "QueueLimit": 0
  },

  // ==========================================================================
  // Logging Configuration
  // ==========================================================================
  // Default: Information level. ASP.NET Core internals: Warning only
  // (reduces noise from framework-level request logging).
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Kestrel host filtering — "*" allows all hosts.
  // In production, restrict this to your domain for security.
  "AllowedHosts": "*"
}
